    <script>
        document.getElementById('whatsappBtn').addEventListener('click', function(event) {
            const serviceRadios = document.getElementsByName('service');
            let selectedService = '';
            for (const radio of serviceRadios) {
                if (radio.checked) {
                    selectedService = radio.value;
                    break;
                }
            }

            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            const name = document.getElementById('name').value;
            const phone = document.getElementById('phone').value;

            if (!selectedService || !startDate || !endDate || !name || !phone) {
                alert('Por favor, completa todos los campos.');
                return;
            }

            const message = `Hola, me gustaría reservar un servicio.%0A%0AServicio: ${selectedService}%0AFecha de inicio: ${startDate}%0AFecha de devolución: ${endDate}%0ANombre: ${name}%0ATeléfono: ${phone}%0A%0AEspero su confirmación.`;
            const whatsappUrl = `https://wa.me/?text=${message}`;

            window.open(whatsappUrl, '_blank');
        });

        // Simple alert replacement for better UX
        function alert(message) {
            const modal = document.createElement('div');
            modal.style.position = 'fixed';
            modal.style.top = '50%';
            modal.style.left = '50%';
            modal.style.transform = 'translate(-50%, -50%)';
            modal.style.backgroundColor = '#fff';
            modal.style.padding = '2rem';
            modal.style.borderRadius = '1rem';
            modal.style.boxShadow = '0 4px 15px rgba(0,0,0,0.2)';
            modal.style.zIndex = '1000';
            modal.style.maxWidth = '300px';
            modal.style.textAlign = 'center';

            const p = document.createElement('p');
            p.textContent = message;
            p.style.marginBottom = '1rem';
            p.style.color = '#333';
            
            const button = document.createElement('button');
            button.textContent = 'OK';
            button.style.backgroundColor = '#2563eb';
            button.style.color = '#fff';
            button.style.padding = '0.5rem 1.5rem';
            button.style.borderRadius = '9999px';
            button.style.fontWeight = 'bold';
            button.style.border = 'none';
            button.addEventListener('click', () => modal.remove());

            modal.appendChild(p);
            modal.appendChild(button);
            document.body.appendChild(modal);
        }

    </script>
</body>
